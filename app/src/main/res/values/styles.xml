<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#CFD8DC</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorAccent">#536DFE</item>
        <!--<item name="background">#455A64</item>-->
    </style>

    <!-- CIRCLE IMAGE style -->
    //Emailed nonprofit organization for approval to use this icon image. Waiting for response. Will swap out if needed.
    <style name="CircleImage">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- HEADER TEXT and BACKGROUND style -->
    <style name="Header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#455A64</item>
    </style>

    <!-- Center INFO TEXT style -->
    <style name="InfoText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- BUTTON Style -->
    <style name="Buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>
